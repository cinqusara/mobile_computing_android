<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/SingleRowLinea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Linea"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16" />

    <Button
        android:id="@+id/btnDirezione1"
        android:layout_width="159dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:backgroundTint="#4CAF50"
        android:text="Seleziona"
        app:layout_constraintBottom_toBottomOf="@+id/SingleRowDirezione1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.651"
        app:layout_constraintStart_toEndOf="@+id/SingleRowDirezione1"
        app:layout_constraintTop_toTopOf="@+id/SingleRowDirezione1"
        app:layout_constraintVertical_bias="0.551" />

    <Button
        android:id="@+id/btnDirezione2"
        android:layout_width="159dp"
        android:layout_height="48dp"
        android:backgroundTint="#4CAF50"
        android:text="Seleziona"
        app:layout_constraintBottom_toBottomOf="@+id/SingleRowDirezione2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.827"
        app:layout_constraintStart_toEndOf="@+id/SingleRowDirezione2"
        app:layout_constraintTop_toTopOf="@+id/SingleRowDirezione2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/SingleRowDirezione1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="direzione stazione 1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.139"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.424" />

    <TextView
        android:id="@+id/SingleRowDirezione2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="direzione stazione 2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/SingleRowDirezione1"
        app:layout_constraintStart_toStartOf="@+id/SingleRowDirezione1"
        app:layout_constraintTop_toBottomOf="@+id/SingleRowDirezione1" />

</androidx.constraintlayout.widget.ConstraintLayout>